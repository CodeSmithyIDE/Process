setting ISHIKO_ENVIRONMENTVARIABLES_ROOT
{
    help = "Path to the Ishiko EnvironmentVariables installation";
    default = '$(ISHIKO)/EnvironmentVariables';
}

template IshikoEnvironmentVariables
{
    includedirs += $(ISHIKO_ENVIRONMENTVARIABLES_ROOT)/Include;

    libdirs += $(ISHIKO_ENVIRONMENTVARIABLES_ROOT)/Lib/$(arch);
}
